@model IEnumerable<MyFirstApi.Models.Product>
@* recieved Products from CRUD Controller and added it to @model object which then refers to it as Model in for each*@

@{
    ViewData["Title"] = "Products CRUD - Index";
}

<h1>Products (MVC CRUD)</h1>

<p>
    <a asp-action="Create">Create New Product</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th style="width: 160px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning me-1">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>